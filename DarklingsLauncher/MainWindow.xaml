<Window x:Class="DarklingsLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DarklingsLauncher"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		ContentRendered="Window_ContentRendered"
        Title="Darklings Launcher" Height="576" Width="1000">
    <Grid>
		<Image Stretch="UniformToFill" Source="Images/Darklings.png" HorizontalAlignment="Right"></Image>
		<TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0, 0, 0, 5"></TextBlock>
		<Button Name="PlayButton" Content="Update" Click="PlayButton_Click" Height="60" FontSize="20" FontWeight="Bold" Foreground="White" Background="Black" BorderBrush="White" Margin="0, 0, 50, 15" VerticalAlignment="Bottom" HorizontalAlignment="Right" MinWidth="150"></Button>
    </Grid>
</Window>
