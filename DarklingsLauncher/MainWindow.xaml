<Window x:Class="DarklingsLauncher.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:DarklingsLauncher"
		mc:Ignorable="d"
		WindowStyle="None"
		ResizeMode="NoResize"
		WindowStartupLocation="CenterScreen"
		ContentRendered="Window_ContentRendered"
		Title="Darklings Launcher" Height="576" Width="1000">
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="32" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
	</WindowChrome.WindowChrome>
	<Grid>
		<Image Stretch="UniformToFill" Source="Images/Darklings.png" HorizontalAlignment="Right"></Image>
		<TextBlock Text="Ver 0.0.0"  Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,50,150"></TextBlock>
		<Button Name="PlayButton" Content="Update" Click="PlayButton_Click" Height="60" FontSize="20" FontWeight="Bold" Foreground="White" Background="Black" BorderThickness="3" BorderBrush="White" Margin="0,0,50,72" VerticalAlignment="Bottom" HorizontalAlignment="Right" MinWidth="150"></Button>
		<TextBlock Text="Darklings" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,911,549"></TextBlock>
		<Button Name="CloseButton" Content="X" Click="CloseButton_Click" Height="30" Width="30" FontSize="20" FontWeight="Bold" Foreground="White" Background="Black" BorderBrush="Black"  VerticalAlignment="Top" HorizontalAlignment="Right" ></Button>
		<Button Name="MinimizeButton" Content="-" Click="MinimizeButton_Click" Height="30" Width="30"  Margin="0,0,30,0" FontSize="20" FontWeight="Bold" Foreground="White" BorderBrush="Black" Background="Black"  VerticalAlignment="Top" HorizontalAlignment="Right" ></Button>
	</Grid>
</Window>

